        <ul class="p-a-0" style="list-style: none">
            <li style="letter-spacing: .75px;" v-for="property in ungroupedProperties">
                ${ property.property.names.name }
            </li>
        </ul>

        <template v-for="group in sortedPropertyGroups">
            <div v-if="getPropertiesByGroupId(group.id).length" :key="group.id">
                <div style="letter-spacing: .75px;">${ group.names.name }</div>
                <ul class="p-a-0" style="list-style: none">
                    <li style="letter-spacing: .75px;" v-for="property in getPropertiesByGroupId(group.id)" :key="property.property.id">
